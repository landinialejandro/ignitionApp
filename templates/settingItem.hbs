<div class="card card-outline card-primary">
    <div class="card-header">
        <h3 class="card-title">
            {{> component_i}}
            {{caption}} <!-- TÃ­tulo de la tarjeta -->
        </h3>
        <div class="card-tools">
            <button type="button" class="btn btn-tool"
                data-lte-toggle="card-collapse">
                <i data-lte-icon="expand" class="bi bi-plus-lg"></i>
                <i data-lte-icon="collapse" class="bi bi-dash-lg"></i>
            </button>
        </div> <!-- /.card-tools -->
    </div> <!-- /.card-header -->
    <div class="card-body" style="display: block; box-sizing: border-box;">
        {{#with properties}}

        {{#if usershelper}}
        <div class="alert alert-info" role="alert">
            {{usershelper}}
        </div>
        {{/if}}

        {{#if (eq type "input-group")}}
        {{!-- Input Group --}}
        {{#each properties}}
        <div class="card">
            <div class="card-body">
                {{> component_input}}
            </div>
        </div>
        {{/each}}

        {{else if (eq type "textarea-group")}}
        {{!-- Textarea Group --}}
        {{#each properties}}
        <div class="card">
            <div class="card-body">
                {{> component_textarea}}
            </div>
        </div>
        {{/each}}

        {{else if (eq type "checkbox-group")}}
        {{!-- Checkbox Group --}}
        {{#each properties}}
        <div class="card">
            <div class="card-body">
                {{> component_checkbox}}
            </div>
        </div>
        {{/each}}

        {{else if (eq type "radio-group")}}
        {{!-- Radio Group --}}
        {{#each properties}}
        <div class="card">
            <div class="card-body">
                {{> component_radio}}
            </div>
        </div>
        {{/each}}

        {{/if}}
        
        {{/with}}
        {{!-- node info --}}
        <div class="mb-3"></div>
        {{!-- {{log this}} --}}
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between mb-3">
                    <div>
                        Node info
                    </div>
                    <div class="float-end mb-2">
                        <span class="badge text-bg-info">Id: {{id}}</span>
                        <span class="badge text-bg-info">Order: {{order}}</span>
                        <span class="badge text-bg-success">Caption:
                            {{caption}}</span>
                        <span class="badge text-bg-primary">Type:
                            {{type}}</span>
                    </div>
                </div>
                {{>component_input id="icon" caption=icon.value}}
            </div>
        </div>

    </div> <!-- /.card-body -->
</div> <!-- /.card -->
