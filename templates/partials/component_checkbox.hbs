<div class="form-check margin-bottom">
    <input
        type="checkbox"
        class="form-check"
        name="{{caption}}"
        data-name="{{caption}}"
        id="checkbox-{{@index}}"
        {{#if value}}checked{{/if}}>
    <label for="checkbox-{{@index}}">
        {{caption}}
    </label>
    {{#if usershelper}}
    {{> usershelper}}
    {{/if}}
</div>